{% extends 'base.html' %}

{% block title %}
    Compliments Results
{% endblock %}

{% block content %}

    <h1>Hey {{ users_name }},</h1>
    <h2>Welcome to my compliment generator!</h2>

    {% if wants_compliments == 'yes' %}
        <ul>
            {% for compliment in random_compliments %}
                <li>{{ compliment }}</li>
            {% endfor %}
        </ul>
    {% endif %}

{% endblock %}
